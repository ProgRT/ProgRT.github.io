\def\showwaveforms#1{%
	\begin{tikzpicture}[]

		\begin{groupplot}[
				group style={group size=1 by 2},
				xlabel=Temps (s),
			]

			\nextgroupplot[ymin=0,ylabel=Pression (\cmh)]
			\addplot [] table[x index=0, y index=2] {#1};

			\nextgroupplot[ylabel=Débit (l/m)]
			\addplot [] table[x index=0, y index=3] {#1};

		\end{groupplot}

	\end{tikzpicture}
}

